{
    "id": "com.athom.homeyscript",
    "sdk": 2,
    "name": {
        "en": "HomeyScript"
    },
    "description": {
        "en": "Script your home"
    },
    "permissions": [
        "homey:manager:api"
    ],
    "category": "tools",
    "version": "1.1.1",
    "compatibility": ">=1.5.12",
    "author": {
        "name": "Athom B.V.",
        "email": "info@athom.com"
    },
    "images": {
        "large": "/assets/images/large.png",
        "small": "/assets/images/small.png"
    },
    "flow": {
        "conditions": [
            {
                "id": "run",
                "title": {
                    "en": "Run a script",
                    "nl": "Voer een script uit"
                },
                "args": [
                    {
                        "name": "script",
                        "type": "autocomplete"
                    }
                ]
            },
            {
                "id": "runWithArg",
                "title": {
                    "en": "Run a script with an argument",
                    "nl": "Voer een script uit met een argument"
                },
                "args": [
                    {
                        "name": "script",
                        "type": "autocomplete"
                    },
                    {
                        "name": "argument",
                        "type": "text",
                        "placeholder": {
                            "en": "Argument",
                            "nl": "Argument"
                        }
                    }
                ]
            }
        ],
        "actions": [
            {
                "id": "run",
                "title": {
                    "en": "Run a script",
                    "nl": "Voer een script uit"
                },
                "args": [
                    {
                        "name": "script",
                        "type": "autocomplete"
                    }
                ]
            },
            {
                "id": "runWithArg",
                "title": {
                    "en": "Run a script with an argument",
                    "nl": "Voer een script uit met een argument"
                },
                "args": [
                    {
                        "name": "script",
                        "type": "autocomplete"
                    },
                    {
                        "name": "argument",
                        "type": "text",
                        "placeholder": {
                            "en": "Argument",
                            "nl": "Argument"
                        }
                    }
                ]
            }
        ]
    }
}